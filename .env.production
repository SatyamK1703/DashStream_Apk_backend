# DashStream Production Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection
MONGODB_URI=mongodb://production-db-server:27017/dashstream

# JWT Authentication
JWT_SECRET=production_secret_key_change_this_in_actual_deployment
JWT_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=https://dashstream-app.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=production_session_secret_change_this_in_actual_deployment
SESSION_EXPIRY=86400000

# Logging
LOG_LEVEL=error

# SMS Service (for OTP)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=DASHSTRM

# Push Notifications
FCM_SERVER_KEY=your_firebase_cloud_messaging_server_key

# File Storage
STORAGE_BUCKET=dashstream-production-bucket
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key

