# Test Environment Variables
NODE_ENV=test
PORT=5001

# Test Database (use different database for testing)
MONGODB_URI=mongodb+srv://Username:Password@dashstream.mongodb.net

# JWT Configuration
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=test-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=test-session-secret
SESSION_EXPIRY=1209600000

# Twilio Configuration (Test credentials)
TWILIO_ACCOUNT_SID=test_account_sid
TWILIO_AUTH_TOKEN=test_auth_token
TWILIO_SERVICE_SID=test_service_sid

# Firebase Configuration (Use test project)
FIREBASE_PROJECT_ID=dashstream-test
FIREBASE_PRIVATE_KEY=test_private_key
FIREBASE_CLIENT_EMAIL=test@dashstream-test.iam.gserviceaccount.com

# Razorpay Configuration (Test keys)
RAZORPAY_KEY_ID=test_key_id
RAZORPAY_KEY_SECRET=test_key_secret

# Cloudinary Configuration (Test account)
CLOUDINARY_CLOUD_NAME=test_cloud
CLOUDINARY_API_KEY=test_api_key
CLOUDINARY_API_SECRET=test_api_secret

# Rate Limiting (More lenient for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000

# Disable external services for testing
DISABLE_EXTERNAL_SERVICES=true
MOCK_SERVICES=true

# Cache Settings
CACHE_TTL=300
REDIS_URL=redis://localhost:6379/1

# Email Settings (Test)
EMAIL_FROM=test@dashstream.com
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test