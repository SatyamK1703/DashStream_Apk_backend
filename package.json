{
  "name": "dashsteam-backend",
  "version": "1.0.0",
  "description": "Backend server for DashStream application",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "prebuild": "npm install @grpc/grpc-js",
    "start": "cross-env NODE_ENV=production node src/server.production.js",
    "start:dev": "cross-env NODE_ENV=development node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "prod": "cross-env NODE_ENV=production nodemon src/server.production.js",
    "start:windows": "node src/server.production.js",
    "dev:windows": "nodemon src/server.js",
    "build": "node deploy.js",
    "test": "jest",
    "test:api": "node src/tests/run-tests.js"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.3",
    "@grpc/grpc-js": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "google-gax": "^5.0.3",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "razorpay": "^2.9.6",
    "twilio": "^5.8.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "axios": "^1.6.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
